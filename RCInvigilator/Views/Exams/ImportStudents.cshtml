@model RCInvigilator.Models.Exam
@{
    ViewBag.Title = "Import Students";
}
<div class="row">
    <div class="large-10 large-centered columns">
        <h2>Import Students</h2>
        @using (Html.BeginForm("Import", "Exams", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4>Students</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("File")
                    <div class="col-md-5">
                        <input type="file" name="Students" id="Students" />
                    </div>
                </div>
                <input type="hidden" name="ExamID" value="@ViewData["ExamID"]" />
                <div class="form-group">
                    <div class="col-md-5">
                        <input type="submit" value="Import" class="button" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>